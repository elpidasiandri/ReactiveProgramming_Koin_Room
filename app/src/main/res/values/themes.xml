<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApplication" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="AppTheme.noActionBar" parent="LauncherTheme">
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionMenuTextColor">@color/new_black</item>
        <item name="android:actionDropDownStyle">@style/MyDropDownNav</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LauncherTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>