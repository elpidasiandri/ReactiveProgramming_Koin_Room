<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Button inactive -->
    <style name="ButtonInactive" parent="ButtonFont">
        <item name="android:textColor">@color/secondary_text_colour</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonSmallInactive" parent="ButtonSmallFont">
        <item name="android:textColor">@color/secondary_text_colour</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Button Active -->
    <style name="ButtonActive" parent="ButtonFont">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonSmallActive" parent="ButtonSmallFont">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Button Pressed -->
    <style name="ButtonPressed" parent="ButtonFont">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--Texts -->
    <style name="TextBodyText" parent="BodyText">
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="TextTitleLarge" parent="TitleLarge">
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="TextTitle" parent="Title">
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="TextTitleMedium" parent="TitleMedium">
        <item name="android:textColor">@color/new_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextCaption" parent="Caption">
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="TextLink" parent="Link">
        <item name="android:textColor">@color/ocean</item>
    </style>

    <style name="TextTitle2XL" parent="Title2XL">
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="TextTitleSecondary" parent="TitleSecondary">
        <item name="android:textColor">@color/new_black</item>
    </style>


    <style name="ButtonOvalBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:height">48dp</item>
        <item name="android:background">@drawable/ocean_pill_button</item>
        <item name="android:textAppearance">@style/ButtonFont</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Base application theme. -->

    <style name="MenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/new_black</item>
    </style>


    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#34C759</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#ffffff
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#EEEDF1
        </item>
    </style>

    <style name="MaterialSwitchFor8App" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/green_switch</item>
        <item name="colorOnPrimaryContainer">@color/green_switch</item>
        <item name="colorSurfaceVariant">@color/new_black_100</item>
        <item name="colorOutline">@color/color_primary_dark</item>>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorControlHighlight">@color/grey_light</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CustomTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">44dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@color/yellow_screen</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">-1dp</item>
        <item name="tabPaddingEnd">-1dp</item>
        <item name="tabBackground">@drawable/bg_tab_unselected</item>
        <item name="tabTextAppearance">@style/MainTabTextStyle</item>
        <item name="tabSelectedTextAppearance">@style/ButtonMediumFont</item>
        <item name="tabSelectedTextColor">@color/new_black_opacity_90</item>
    </style>

    <style name="tabLayoutFont" parent="TextAppearance.Design.Tab">
        <item name="android:textAppearance">@style/ButtonMediumFont</item>
        <item name="android:textColor">@color/new_black_opacity_90</item>
        <item name="tint">@color/new_black_opacity_90</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MainTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text_colour</item>
        <item name="android:fontFamily">@font/space_grotesk_regular</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="GalleryToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyDropDownNav" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:textColor">@color/new_black</item>
    </style>


    <style name="DividerSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.05</item>
    </style>


    <attr name="centered" format="boolean" />
    <attr name="selectedColor" format="color" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="unselectedColor" format="color" />


    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="CancelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
